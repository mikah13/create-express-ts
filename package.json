{
  "name": "create-express-ts",
  "version": "1.0.0",
  "description": "create-express-ts is a repository that serves as a foundational boilerplate for building web applications using the Express.js framework and TypeScript.",
  "license": "MIT",
  "private": false,
  "main": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "tsc --project './tsconfig.json' --watch &NODE_ENV=development nodemon ./dist/index.js",
    "build": "tsc --project './tsconfig.json'",
    "start": "pnpm run build && NODE_ENV=production node ./dist/index.js",
    "watch": "tsc --project './tsconfig.json' --watch",
    "lint": "eslint src/**/*.{ts,css,js,html}",
    "lint:fix": "eslint --fix --ext src/**/*.ts",
    "code:format": "prettier --write src/**/*.ts",
    "code:check": "prettier --check src/**/*.ts",
    "code:format:specific-file": "prettier --write ",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Mike Hoang",
  "imports": {
    "@/*": "./src/*"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.20",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-eslint": "^16.1.2",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  }
}